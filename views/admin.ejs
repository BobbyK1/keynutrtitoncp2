<% include partials/header %>

<div class="container-fluid" style="height: 600px; padding-top: 75px">
    <div class="container shadow-lg rounded bg-white" style="width: 400px; height: 400px">
        <p class="text-center" style="font-weight: bold; font-size: 4em;">Log In</p>
        <form action="/admin" method="post">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                </div>
                <input type="text" class="form-control" name="username" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" name="password" id="basic-addon1"><i class="fas fa-key"></i></span>
                </div>
                <input type="password" class="form-control" placeholder="Password" aria-label="password"  name="password" aria-describedby="basic-addon1">
            </div>
            <div>
                <input type="submit" class="btn btn-outline-success btn-lg btn-block mg-top" value="Log In"/>
            </div>
        </form>
    </div>
</div>

<% include partials/footer %>