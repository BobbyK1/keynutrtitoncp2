<% include partials/header %>
<div class="jumbotron mg-top text-center bg-light">
        <h1 class="display-4">Interested in a positon at Key Nutrition?</h1>
        <h3 class="lead">Apply here and we will get back soon!</h3>
        <hr class="my-4" style="width: 75%;">
</div>

<div class="container">
    <form action="/apply" method="POST" style="width: 100%;">
        <div class="bg-white" style="padding: 40px;">
            <h3>General Information: </h3>
            <div class="form-group mg-top">
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <label for="first-name">First Name:</label>
                        <input type="text" name="firstName" id="first-name" class="form-control">
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <label for="last-name">Last Name:</label>
                        <input type="text" name="lastName" id="last-name" class="form-control">
                    </div>
                </div>
                <div class="row mg-top">
                    <div class="col-md-6 col-xs-12">
                        <label for="address">Address:</label>
                        <input type="text" name="address" id="address" class="form-control">
                    </div>
                    <div class="col-md-3 col-xs-12">
                        <label for="state">State:</label>
                        <input type="text" name="state" id="state" class="form-control">
                    </div>
                    <div class="col-md-3 col-xs-12">
                        <label for="zip">Zipcode:</label>
                        <input type="text" name="zip" id="zip" class="form-control">
                    </div>
                </div>
                <div class="row mg-top">
                    <div class="col-md-6 col-xs-12">
                        <label for="email">Email: </label>
                        <input type="email" name="email" id="email" class="form-control">
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <label for="phone">Email: </label>
                        <input type="tel" name="phone" id="phone" class="form-control">
                    </div>
                </div>
            </div>
            <h3 class="mg-top">Work Experience:</h3>
            <div class="row">
                <div class="col">
                    <input type="text" placeholder="test" class="form-control">
                </div>
            </div>
            <div class="row" id="moreExp1">

            </div>
            <button type="button" onclick="addExp()" class="btn btn-outline-success btn-lg btn-block">More Experience</button>
            <div class="row">
                <div class="col-md-4 col-xs">
                    <h6 class="mg-top">Are you legally eligible to work in the US?</h6>
                    <div class="form-check form-check-inline text-center">
                        <label for="yes" class="form-check-label" style="margin-right: 5px;">Yes </label>
                        <input type="radio" name="legal-status" id="yes" class="form-check-input">
                    </div>
                    <div class="form-check form-check-inline">
                        <label for="legal-status" class="form-check-label" style="margin-right: 5px;">No </label>
                        <input type="radio" name="legal-status" id="no" class="form-check-input">
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" class="btn  btn-outline-success btn-lg btn-block">
    </form>
</div>

<% include partials/footer %>